{% extends 'base.html.twig' %}
{% block title %}{% if is_new is defined %}Добавление{% else %}Редактирование{% endif %} документа{% endblock %}

{% block content %}
<h3>{% if is_new is defined %}Добавление{% else %}Редактирование{% endif %} документа</h3>
<div class="form-wrapper">
	{% form_theme form 'form_layout.html.twig' %}
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_row(form.name) }}
	</div>
	<div class="form-group">
        {{ form_row(form.description) }}
    </div>
    <div class="form-group">
			Фотографии
    </div>
	<div class="form-group">
		{{ form_row(form.attachment) }}	
	</div>
	<div class="form-group">
        <input type="hidden" class="uploads" value="{{ files|default([])|json_encode }}">
        <div class="upload-dropzone">
            <div class="dropify-message dropzone-click-x dz-default dz-message">
                <span class="file-icon"></span>
                <p>Перетащите файл или кликните для загрузки</p>
            </div>
        </div>
	</div>
    <div class="form-group">
		<input type="submit" class="btn btn-primary" value="Сохранить">
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}

